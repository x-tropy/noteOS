<% if user_signed_in? %>
  <div class="p-2 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 lg:gird-cols-5 xl:grid-cols-6 sm:gap-2">
    <div class="border-b border-gray-300 sm:border rounded sm:border-gray-400 hover:bg-gray-200">
      <%= link_to 'New Article', new_article_path, class: "text-base px-3 py-2 block h-full" %>
      <!--    <p><%#= truncate(strip_tags(article.content.to_s), length: 100) %></p>-->
    </div>
    <% @articles.each do |article| %>
      <div class="border-b border-gray-300 sm:border rounded sm:border-gray-400 hover:bg-gray-200">
        <% if cookies[:mode] == "edit" %>
          <%= link_to article.title, edit_article_path(article), class: "text-base px-3 py-2 block h-full" %>
        <% else %>
          <%= link_to article.title, article_path(article), class: "text-base px-3 py-2 block h-full" %>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <%= link_to "Sign in", new_user_session_path %> |
  <%= link_to "Sign up", new_user_registration_path %>
<% end %>
