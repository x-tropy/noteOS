<div id="app"></div>
<div class="p"><%= link_to 'New Article', new_article_path if user_signed_in? %></div>
<div class="grid sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-6 gap-2">
  <% @articles.each do |article| %>
    <div class="border rounded border-gray-400 hover:bg-gray-200">
      <%= link_to article.title, article_path(article), class: "text-base px-3 py-2 block h-full" %>
      <!--    <p><%#= truncate(strip_tags(article.content.to_s), length: 100) %></p>-->
    </div>
  <% end %>
</div>
